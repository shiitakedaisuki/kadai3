<div class="row">
    <div class="container">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <h1>Editing Book</h1>
          <%= form_with model: @book,url:book_path(@book.id), method: :patch do |f| %>
            <div class="form-group">
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_area :body %>
            </div>
            <div class="form-group">
              <%= f.submit "Update Book",class:"btn btn-success" %>
            </div>
          <% end %>
            <div class="form-group">
             <%= link_to "Show", book_path(@book.id) %>|
             <%= link_to "Back", books_path %>
            </div>
      </div>
    </div>
</div>





 

  
  
